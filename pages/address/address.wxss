/**address.wxss**/
.container{
  padding:0px;
  margin:0px;
  box-sizing: border-box; 
  min-height:100vh; 
  width:100%;
  background-color: #F5F5F5;
  padding-bottom:98rpx;
  display: flex;
  flex-direction: column;
}
.address{
  width:100%;
  padding-left:30rpx;
  padding-right:30rpx;
  box-sizing: border-box;
  margin-bottom:20rpx;
  background-color: #fff;
}
.addressInfo{
  padding-top:34rpx;
  border-bottom:1px solid #EEEEEE;
}
.addressInfo .userName{
  font-size:32rpx;
  color:#333333;
  height:60rpx;
}
.addressInfo .userName .phone{
  margin-left:40rpx;
  font-size:30rpx;
}
.addressInfo .userAddress{
  font-size:26rpx;
  color:#333333;
  height:52rpx;
}
.addressOperate{
  padding-top:38rpx;
  padding-bottom:36rpx;
}
.addressOperate .default{
  font-size:28rpx;
  color:#C09C60;
}
.addressOperate .operate{
  display: inline-block;
  width:516rpx;
  text-align: right;
  font-size:26rpx;
  color:#999999;
}
.addressOperate .operate image{
  width:36rpx;
  height:36rpx;
  margin-right:14rpx;
  position:relative;
  top:6rpx; 
  /* vertical-align: bottom; */
}
.addressOperate .operate .edit{
  margin-right:26rpx;
}
.addAddress{
  width:100%;
  height:98rpx;
  background-color:#000000;
  color:#FFFFFF;
  position: fixed;
  bottom:0;
  border-radius:0rpx;
}
.addAddress image{
  width:36rpx;
  height:36rpx;
  vertical-align: middle;
  margin-right:22rpx;
  position:relative;
  top:-4rpx;
}
.addAddress text{
  height:98rpx;
  line-height:98rpx;
  display: inline-block;
}
/*选默认不选默认*/
.address .strong{
  width:36rpx;
  height:36rpx;
  background-size: 100% 100%;
}
.address .checkBg{
  display: inline-block;
  vertical-align: middle;
  margin-right:10rpx;
}
.address .checkBg image{
  position:relative;
  top:5rpx;
}
