/**产品详情图片**/
.container{
  padding:0px;
  margin:0px;
  box-sizing: border-box; 
  min-height:100vh; 
  width:100%;
}
.goods swiper{
  width:100%;
  height:581rpx;
  position: relative;
}
.goods .imageItem{
  width:100%;
  height:566rpx;
}
.goods .goodsImage{
  width:100%;
  height:566rpx;
}
.goods .wx-swiper-dots.wx-swiper-dots-horizontal{
  position:absolute; 
  bottom:0rpx;
}
.goods .wx-swiper-dot{
  width:14rpx;
  height:6rpx;
  background-color: #999999;
  border-radius: 0px;
  margin-right:10rpx;
}
.goods .wx-swiper-dot-active{
  background-color: #DDC899;
}
/*文字描述*/
.goods .detailContent{
  width:750rpx;
  margin:0 auto;
  text-align: center;
  box-sizing: border-box;
  border-bottom:1px solid #EEEEEE;
}
.goods .detailContent .flower{
  width:60rpx;
  height:82rpx;
  display: block;
  margin:0 auto;
}
.goods .detailContent .text{
  width: 750rpx;
  height: 562rpx;
  box-sizing: border-box;
}
/*产品参数*/
.goodsParams{
  padding-top:60rpx;
}
.goodsParams .params1,.goodsParams .params2{
  display: block;
  text-align: center;
}
.goodsParams .params1{
  font-size:32rpx;
  color:#333333;
  height:62rpx;
}
.goodsParams .params2{
  font-size:24rpx;
  color:#999999;
  height:54rpx;
}
.goodsParams .horizonLine{
  width:44rpx;
  height:2rpx;
  margin:0 auto;
  background-color:#C09C60; 
  margin-bottom:60rpx;
}
.goodsParams .tableIn{
  display: flex;
  flex-direction:column;
  width:650rpx;
  height:366rpx;
  box-sizing: border-box;
  border:1px solid #EEEEEE;
}
.goodsParams .tableIn .row1{
  height:244rpx;
  border-bottom:1px solid #EEEEEE;
  box-sizing: border-box;
  display: flex;
  flex-direction:row;
}
.goodsParams .tableIn .row1 .column1{
   width:300rpx;
   height:244rpx;
   border-right:1px solid #EEEEEE;
   box-sizing: border-box;
   display: flex;
   flex-direction:column;
}
.tableIn .row1 .column1 view{
   height:25%;
   box-sizing: border-box;
   border-bottom:1px solid #EEEEEE;
   padding-left:30rpx;
}
.tableIn .row1 .column1 .outerName{
  background-color: #DDC899;
  opacity:0.7;
}
.tableIn .row1 .column2{
  box-sizing: border-box;
  padding-top:50rpx;
  text-align: center;
  padding-left:14rpx;
}
.tableIn .row1 .column2 image{
   width:329rpx;
   height:165rpx;
}
.goodsParams .tableIn .inTitle{
   font-size:26rpx;
   color:#333333;
}
.goodsParams .tableIn .inContent{
   font-size:26rpx;
   color:#666666;
   padding-left:18rpx;
}
.tableIn .row2{
   padding-left:30rpx;
   padding-top:18rpx;
   height:122rpx;
   box-sizing: border-box;
}
.tableIn .row2 view{
   padding:0;
   margin:0;
   height:30rpx;  
   line-height:30rpx;
}
/*保障*/
.goods .guarantee{
  margin-top:60rpx;
  display: flex;
  margin-bottom:60rpx;
}
.goods .guarantee .guaranteeCon{
  width:204rpx;
  height:204rpx;
  box-sizing: border-box;
  border:1px solid #EEEEEE;
  text-align: center;
  padding-top:56rpx;
  margin-right:20rpx;
}
.goods .guarantee .guaranteeCon text{
  display: block;
  font-size:24rpx;
  color:#999999;
  margin-top:20rpx;
}
.goods .guarantee image{
  width:44rpx;
  height:44rpx;
}
