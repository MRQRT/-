/* pages/leaveMessage/leaveMessage.wxss */
.leaveMessage{
  width: 100%;
  background-color: #f5f5f5;
  text-align: center;
  flex-direction: column;
  box-sizing: border-box;
  height: 100vh;
}
.outerBox{
  height:920rpx;
  width: 620rpx;
  background-color: #fff;
  margin:0 auto;
  padding-top:76rpx;
  box-sizing: border-box;
}
.title{
  font-size: 40rpx;
  font-weight: bold;
  color:#000;
  display: inline-block;
  height: 145rpx;
  line-height: 170rpx;
}
.content{
  width: 620rpx;
  background-color: #fff;
  padding-bottom:40rpx;
}
.content .incontent{
  height:640rpx;
}
.content image{
  width:500rpx;
  height: 332rpx;
}
.content .sombody{
  color: #c09c60;
  font-size: 28rpx;
}
.content .say{
  color:#333333;
  font-size: 28rpx;
}
.content .say{
  font-size: 28rpx;
}
.leave_message{
  display: inline-block;
  font-size: 30rpx;
  height:150rpx;
  color: #333333;
  letter-spacing: 1px;
  text-align: left;
  box-sizing: border-box;
  padding: 0 10rpx 0 10rpx;
  margin-top: 20rpx;
}
.dashed{
  width: 620rpx;
  /*height: 110rpx;*/
  height: 40rpx;
  position: relative;
}
.dashed image{
  width:514rpx;
  height:6rpx;
  display: block;
  margin:0 auto;
  position: relative;
  top:17rpx;
}
.left_dashed{
  width:40rpx;
  height:40rpx;
  border-radius:50%;
  background-color: #f5f5f5;
  position: absolute;
  left:-20rpx;
  top: 0rpx;
}
.right_dashed{
  width:40rpx;
  height:40rpx;
  border-radius:50%;
  background-color: #f5f5f5;
  position: absolute;
  right: -20rpx;
  top: 0rpx;
}
.video,.leaveMessage .leaveImage{
  width: 200rpx;
  height: 200rpx;
  display:block;
  margin:0 auto;
}
