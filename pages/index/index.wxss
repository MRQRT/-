/**index.wxss**/
.container{
  display: flex;
  box-sizing: border-box;
  padding: 0;
  justify-content: left;
  height:100vh;
  padding-top:40rpx;
}
.title{
  text-align:left;
  width: 622rpx;
  font-size:48rpx;
  height:50rpx;
  line-height: 50rpx;
  font-weight:bold;
}
.desc{
  text-align:left;
  width:622rpx;
  font-size:24rpx;
  height:24rpx;
  line-height:24rpx;
  color:#999999;
  padding-top:24rpx;
}
.under{
  padding-top:25rpx;
  width:622rpx; 
  line-height:22rpx;
  text-align: center;
}
.padding{
  padding-bottom:0;
  padding-bottom:60rpx;
}
.under .liaojie{
  font-size: 22rpx;
  color: #C09C60;
  display: inline-block;
  width: 150rpx;
  height: 22rpx;
}
.swiper{
  width: 750rpx;
  text-align: center;
}
.swiper_item{
  width: 620rpx;
  padding-top: 15rpx;
  position: relative;
  box-sizing: border-box;
}
.slide-image{
  width:620rpx;
  box-shadow: 0 0 6px 6px #f7f7f7;
}
.send{
  z-index: 2;
  position: absolute;
  text-align: center;
  position: absolute;
  left:50%;
  margin-left:-220rpx;
  opacity:0.6;
}
.send .send_text{
  display: inline-block;
  width: 440rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #000;
  color: #fff;
  font-size: 34rpx;
  border-radius: 8rpx;
}
.card{
  position: fixed;
  width: 750rpx;
  text-align: center;
  height:120rpx;
  bottom:0;
}
.card .card_item,.iphone .card_item{
  box-sizing: border-box;
  display:inline-block;
  width: 100rpx;
  height: 100rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  border-radius: 5rpx;
  border: 9rpx solid #fff;
  box-shadow: 0px 0px 2rpx 2rpx #f3f3f3;
  position: absolute;
}
.card .card_item .inText{
  width: 86rpx;
  height: 86rpx;
  display: block;
  background-color: #999999;
  margin: 0 auto;
}
/*我的礼品柜*/
.myChest{
  position: fixed;
  height: 90rpx;
  line-height: 90rpx;
  width: 187rpx;
  font-size: 24rpx;
  right: 0;
  top: 40rpx;
  color:#333333;
  text-align: center;
  border-radius:45rpx 0 0 45rpx;
  box-shadow: 0 0 4px 2px #f5f5f5;
  background-color: #fff;
}

